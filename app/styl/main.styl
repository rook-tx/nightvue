@import './_reset'
@import './_variables'
@import './_fonts'

*, *::before, *::after {
	box-sizing: border-box
	-webkit-tap-highlight-color: transparent
}

html, body
	background: $w
	color: $black
	font-family: $work
	font-weight: 600
	min-height: 100%

html
	font-size: ($p/16)*75%

	+above($tablet)
		font-size: ($p/16)*100%

body
	font-size: 100%
	line-height: $let

a
	color: inherit
	text-decoration: none
	transition: color .2s

	&:hover
		color: $red

	p &
		border-bottom: 2px solid $red

img
	display: block
	height: auto
	max-width: 100%

h1, h2, h3, h4, h5, p
	mgn(1,auto)
	max-width: $pwidth*1em
	text-align: center

h1, h2
	font-weight: 800
	text-transform: uppercase

h3, h4, h5
	font-weight: 700

h1
	fs(mp(5))

h2
	fs(mp(4))

h3
	fs(mp(3))

h4
	fs(mp(2))

h5
	fs(mp(1))

pre
	font-family: monospace
	fs(mp(0))

ul, ol
	mgn(1,0)
	pad(0,0,0,1)

	li
		mgn(.5,0)

ul
	list-style: disc

ol
	list-style: decimal

form
	mgn(1,0)

.form-row
	mgn(.5,0)

button, input, label, select, textarea
	display: block
	font: inherit
	line-height: $let
	width: 100%

button, input, select, textarea
	appearance: none
	background: none
	border: 1px solid #ccc
	outline: 0

	&:focus
		border-color: #555

button, [type=submit]
	cursor: pointer
	mgn(0,auto)
	pad(.25,1)
	width: auto

@import './_col'
@import './_global'
