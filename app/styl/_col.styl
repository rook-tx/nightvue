// ----------
// Parents
// ----------

.cf
  &::before, &::after
    content: ' '
    display: block

  &::after
    clear: both

.wrap
  @extend .cf
  mgn(0,auto)
  max-width: ($pwidth*2 + $gut*3)*1em
  pad(0,1)
  width: 100%

.one-col
  float: left
  padding-left: $gut*.5em
  padding-right: $gut*.5em
  width: 100%

col($x,$n)
  @extend .one-col

  +above($tablet)
    width: (($x*100%)/$n)

.two-col
  col(1,2)

.three-col
  col(1,3)

.two-three-col
  col(2,3)

.four-col
  col(1,4)

.three-four-col
  col(3,4)


// ----------
// Modifers
// ----------

.clear-col.clear-col
  float: none
  padding-left: $gut*1em
  padding-right: $gut*1em

.noPad.noPad
  padding-left: 0
  padding-right: 0

.col-cl.col-cl
  clear: left

.col-cr.col-cr
  clear: right

.col-c.col-c
  clear: both
  float: none
  margin-left: auto
  margin-right: auto

.col-r.col-r
  float: right

.align-c.align-c
  text-align: center

.align-r.align-r
  text-align: right
